<div class="columns is-centered">
  <div class="column is-half">
    <div class="card">
      <div class="card-image">
        <figure class="image is-4by3">
          <img src="<%= perfume.uri %>" alt="Placeholder image" />
        </figure>
      </div>
      <div class="card-content">
        <div class="media">
          <div class="media-content">
            <p class="title is-4"><%= perfume.perfumeName %></p>
          </div>
        </div>
        <div class="content">
          <p><%= perfume.description %></p>
          <p>Volume: <%= perfume.volume %>ml</p>
          <p>Target Audience: <%= perfume.targetAudience %></p>
          <p>Brand: <%= perfume.brand.brandName %></p>
          <p>Ingredients: <%= perfume.ingredients %></p>
          <p>Concentration: <%= perfume.concentration %></p>
          <p>Price: <%= perfume.price.toLocaleString() %></p>
        </div>
      </div>
    </div>

    <div class="column">
      <h2 class="title">Comments</h2>
      <% if (perfume.comments.length > 0) { %> <%
      perfume.comments.forEach(comment => { %>
      <div class="box">
        <p><strong>Rating:</strong> <%= comment.rating %>/3</p>
        <p><strong>Comment:</strong> <%= comment.content %></p>
        <p><strong>Author:</strong> <%= comment.author.memberName %></p>
        <p><small><%= comment.createdAt.toDateString() %></small></p>
      </div>
      <% }) %> <% } else { %>
      <p>No comments yet.</p>
      <% } %>
      <div>
        <% if(session && session.user && session.user.isAdmin === false) {%>
        <h2 class="title">Leave a Comment</h2>
        <form action="/perfume/<%= perfume._id %>/comment" method="POST">
          <div class="field">
            <label class="label">Rating</label>
            <div class="control">
              <input
                class="input"
                type="number"
                name="rating"
                min="1"
                max="5"
                required
              />
            </div>
          </div>
          <div class="field">
            <label class="label">Comment</label>
            <div class="control">
              <textarea class="textarea" name="content" required></textarea>
            </div>
          </div>
          <div class="control">
            <button type="submit" class="button is-primary">Submit</button>
          </div>
        </form>
        <% } else { %> <% } %>
      </div>
    </div>
  </div>
</div>
