<h1 class="title">Manage Perfumes</h1>
<a href="/perfume/new" class="button is-black">Add New Perfume</a>
<table class="table is-fullwidth mt-5">
  <thead>
    <tr>
      <th>Perfume ID</th>
      <th>Perfume Name</th>
      <th>Brand</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% perfumes.forEach(function(perfume) { %>
    <tr>
      <td><%= perfume._id %></td>
      <td><%= perfume.perfumeName %></td>
      <td><%= perfume.brand.brandName %></td>
      <td>
        <form
          action="/perfume/<%= perfume._id %>/delete"
          method="POST"
          style="display: inline"
          onsubmit="return confirm('Are you sure you want to delete this Perfume?');"
        >
          <a
            href="/perfume/<%= perfume._id %>/edit"
            class="button is-small is-primary">
              Edit
          </a>
          <button type="submit" class="button is-small is-danger">
            Delete
          </button>
        </form>
          
      </td>
    </tr>
    <% }); %>
  </tbody>
</table>
